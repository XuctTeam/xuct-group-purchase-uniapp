@import "../../../nvue.wxss";

.box {
  position: relative;
}
.head_top {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}
.head_top::after {
  content: '';
  width: 140%;
  height: 300rpx;
  position: absolute;
  z-index: -1;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #70db93;
}
.avatar {
  height: 180rpx;
  width: 100%;
  padding: 10rpx 30rpx;
}
.menu {
  position: absolute;
  top: 160rpx;
  right: 0;
  left: 0;
  overflow: hidden;
}
.user-head-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.7);
}
