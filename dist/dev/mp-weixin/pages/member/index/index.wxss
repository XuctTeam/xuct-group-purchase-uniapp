@import "../../../nvue.wxss";

.member-top {
  position: relative;
  width: 100%;
  height: 340rpx;
}
.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
}
.member-top-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.user-head-img {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.7);
  margin: 0 auto 16rpx;
}
.login-btn {
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 12px;
}
.member-grid {
  background-color: #fff;
  border-top: 2rpx solid #eee;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
}
