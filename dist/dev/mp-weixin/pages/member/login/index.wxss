@import "../../../nvue.wxss";

.login-item {
  display: flex;
  justify-content: center;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #dddddd;
  align-items: center;
  margin-top: 20rpx;
}
.logo {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.login-tip {
  padding: 30rpx;
}
.login-tip-big {
  font-size: 28rpx;
  line-height: 80rpx;
}
.login-tip-small {
  font-size: 12px;
  color: #9e9e9e;
}
.app-name {
  font-size: 28rpx;
  color: #999;
}
.login-b {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  justify-content: space-around;
}
.login-b .btn-g {
  margin-top: 40rpx;
}
.confirm {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px;
  line-height: 40px;
}
